const mysql = require('mysql');
const db = mysql.createConnection({
    host: "localhost",
    port: 3306,
    user: "root",
    password: "Pirates26!",
    database: "livelyshelfsdb",
});

db.connect((err) => {
    if (err) {
        console.error('Error connecting to the database:', err);
    } else {
        console.log('Connected to the database successfully');
    }
});

module.exports = db;
